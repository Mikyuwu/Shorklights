FROM node:18-alpine

ARG JWT_SECRET_KEY
ARG ACCESS_TOKEN_EXPIRE_MINUTES

ENV ACCESS_TOKEN_EXPIRE_MINUTES=$ACCESS_TOKEN_EXPIRE_MINUTES
ENV JWT_SECRET_KEY=$JWT_SECRET_KEY

WORKDIR /app

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build

RUN npm install vite --save-dev

EXPOSE 5173

CMD npm run dev -- --host 0.0.0.0 --port ${FRONTEND_PORT}